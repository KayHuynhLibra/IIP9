    "chai": "^4.3.7",
    "concurrently": "^7.6.0",
    "mocha": "^11.2.2"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "dotenv": "^16.5.0",
    "node-fetch": "^3.3.2"
  }
}
